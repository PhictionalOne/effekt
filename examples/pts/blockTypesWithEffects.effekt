module examples/pts/blockTypesWithEffects

effect Eff() : Unit

def testFunction(x: Int, y: Int): Int / Eff = {
    do Eff()
    x + y
}

// PROBLEM: We can only know what the return type is after calling the function with a specific block parameter
// To prevent error, we need to annotate return type of "run"

def run{functionParam: _}: Int / Eff = functionParam(1, 2)

def main() = {
    run { testFunction }
}